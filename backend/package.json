    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^5.5.0",
    "morgan": "^1.10.0",
    "redis": "^4.6.6",
    "socket.io": "^4.2.0",
    "socket.io-redis": "^6.1.1",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^9.0.0"
