    "@types/redis": "^4.0.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.1",
    "nodemon": "^2.0.13",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  }
}
